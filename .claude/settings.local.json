{
  "permissions": {
    "allow": [
      "WebFetch:*",
      "WebSearch",

      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git stash:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git init:*)",
      "Bash(git clone:*)",
      "Bash(git check-ignore:*)",
      "Bash(git push)",
      "Bash(git push -u:*)",
      "Bash(git rm:*)",
      "Bash(git tag:*)",
      "Bash(git merge:*)",
      "Bash(git reset:*)",
      "Bash(git submodule:*)",
      "Bash(git submodule add:*)",

      "Bash(cargo check:*)",
      "Bash(cargo test:*)",
      "Bash(cargo build:*)",
      "Bash(cargo run:*)",
      "Bash(cargo clean:*)",
      "Bash(cargo tree:*)",
      "Bash(cargo metadata:*)",
      "Bash(cargo install:*)",
      "Bash(cargo objdump:*)",
      "Bash(cargo +nightly-2025-01-15 check:*)",
      "Bash(RISC0_SKIP_BUILD_KERNELS=1 cargo check:*)",
      "Bash(RUSTFLAGS='-C target-feature=+simd128' cargo check:*)",
      "Bash(RUSTFLAGS='-C target-feature=+simd128' cargo build:*)",
      "Bash(RUSTFLAGS='--cfg getrandom_backend=\"js\" -C target-feature=+simd128' wasm-pack build:*)",

      "Bash(forge init:*)",
      "Bash(forge build:*)",
      "Bash(forge test:*)",
      "Bash(forge script:*)",

      "Bash(wasm-pack:*)",
      "Bash(wasm-pack build:*)",
      "Bash(RUSTFLAGS='-C target-feature=+simd128' wasm-pack build:*)",
      "Bash(wasm2wat:*)",
      "Bash(wasm-objdump:*)",

      "Bash(rustc:*)",
      "Bash(rustup target list:*)",
      "Bash(rustup target add:*)",
      "Bash(rustup component list:*)",
      "Bash(rustup show:*)",
      "Bash(rustup run nightly cargo objdump:*)",
      "Bash(rustup run nightly rustc:*)",
      "Bash(rustup run nightly wasm-pack build:*)",

      "Bash(docker build:*)",
      "Bash(docker run:*)",
      "Bash(docker image inspect:*)",
      "Bash(timeout:*)",
      "Bash(.claude/docker/run-autonomous.sh:*)",

      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(du:*)",
      "Bash(file:*)",
      "Bash(shasum:*)",
      "Bash(cat:*)",
      "Bash(tail:*)",
      "Bash(sort:*)",
      "Bash(jq:*)",
      "Bash(lsof:*)",

      "Bash(mkdir -p:*)",
      "Bash(chmod:*)",
      "Bash(date:*)",

      "Bash(curl:*)",

      "Bash(make:*)",
      "Bash(node:*)",
      "Bash(npx playwright test:*)",
      "Bash(timeout 120 npx playwright test:*)",

      "Bash(brew:*)",

      "Bash(objdump:*)",
      "Bash(llvm-objdump:*)",
      "Bash(riscv64-unknown-elf-objdump:*)",
      "Bash(riscv64-unknown-elf-gcc:*)",
      "Bash(~/.rustup/toolchains/stable-aarch64-apple-darwin/lib/rustlib/aarch64-apple-darwin/bin/llvm-objdump:*)",
      "Bash(rzup:*)",
      "Bash(sp1up --version:*)",
      "Bash(~/.sp1/bin/cargo-prove:*)",
      "Bash(./target/release/allir-cli:*)",
      "Bash(./scripts/patch-sp1.sh:*)",
      "Bash(./build.sh:*)",
      "Bash(./build-web.sh:*)",
      "Bash(xargs cat:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-start.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-commit.sh \"$TOOL_INPUT\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "$CLAUDE_PROJECT_DIR/.claude/statusline.sh"
  },
  "alwaysThinkingEnabled": true,
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "MAX_THINKING_TOKENS": "31999"
  }
}
