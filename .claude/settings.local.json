{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-start.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-commit.sh \"$TOOL_INPUT\""
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "WebFetch:*",
      "WebSearch",

      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git stash:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git init:*)",
      "Bash(git clone:*)",
      "Bash(git submodule:*)",
      "Bash(git submodule add:*)",

      "Bash(cargo check:*)",
      "Bash(cargo test:*)",
      "Bash(cargo build:*)",
      "Bash(cargo run:*)",
      "Bash(cargo clean:*)",
      "Bash(cargo tree:*)",
      "Bash(cargo metadata:*)",
      "Bash(cargo install:*)",
      "Bash(cargo objdump:*)",
      "Bash(cargo +nightly-2025-01-15 check:*)",
      "Bash(RISC0_SKIP_BUILD_KERNELS=1 cargo check:*)",

      "Bash(forge init:*)",
      "Bash(forge build:*)",
      "Bash(forge test:*)",
      "Bash(forge script:*)",

      "Bash(rustc:*)",
      "Bash(rustup target list:*)",
      "Bash(rustup target add:*)",
      "Bash(rustup component list:*)",
      "Bash(rustup show:*)",
      "Bash(rustup run nightly cargo objdump:*)",
      "Bash(rustup run nightly rustc:*)",
      "Bash(rustup run nightly wasm-pack build:*)",

      "Bash(wasm-pack:*)",
      "Bash(wasm-pack build:*)",

      "Bash(make:*)",
      "Bash(node:*)",
      "Bash(brew:*)",

      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(du:*)",
      "Bash(file:*)",
      "Bash(shasum:*)",
      "Bash(chmod:*)",
      "Bash(curl:*)",
      "Bash(xargs cat:*)",

      "Bash(objdump:*)",
      "Bash(llvm-objdump:*)",
      "Bash(riscv64-unknown-elf-objdump:*)",
      "Bash(riscv64-unknown-elf-gcc:*)",
      "Bash(~/.rustup/toolchains/stable-aarch64-apple-darwin/lib/rustlib/aarch64-apple-darwin/bin/llvm-objdump:*)",

      "Bash(rzup:*)",
      "Bash(sp1up --version:*)",
      "Bash(~/.sp1/bin/cargo-prove:*)",

      "Bash(./target/release/allir-cli:*)",
      "Bash(./scripts/patch-sp1.sh:*)",
      "Bash(./build.sh:*)",
      "Bash(./build-web.sh:*)"
    ]
  }
}
